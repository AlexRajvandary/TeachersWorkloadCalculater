<Window x:Class="StudingWorkloadCalculator.Windows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudingWorkloadCalculator.Windows"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Background="Gray">
            <MenuItem Header="Load data">
                <MenuItem Header="Load Access database"/>
                <MenuItem Header="Load Excel file"/>
            </MenuItem>
            <MenuItem Header="View">
                <CheckBox Content="Teachers" Checked="TeachersCheckBoxChecked" Unchecked="TeachersCheckBoxUnchecked"/>
                <CheckBox Content="Students" Checked="StudentsCheckBoxChecked" Unchecked="StudentsCheckBoxUnchecked"/>
                <CheckBox Content="Group" Checked="GroupsCheckBoxChecked" Unchecked="GroupsCheckBoxUnchecked"/>
                <CheckBox Content="Specialization" Checked="SpecializationCheckBoxChecked" Unchecked="SpecialiationsCheckBoxUnchecked"/>
            </MenuItem>
            <MenuItem Header="Settings"/>
            <MenuItem Header="Info"/>
        </Menu>
        <Grid Grid.Row="1" Background="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <TabControl x:Name="Tabs"
                        Background="WhiteSmoke"/>
            <Grid Grid.Row="1"
                  Background="Gray"
                  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Button Content="Save" 
                        Margin="5"
                        Width="50"
                        DockPanel.Dock="Right"
                        Grid.Column="1"
                        Background="WhiteSmoke"/>
                <Button Content="Export"
                        Margin="5"
                        Width="50"
                        Grid.Column="2"
                        Background="WhiteSmoke"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
